{
  "name": "@victorfbrito/neo-ui-demo",
  "version": "0.1.7",
  "private": false,
  "description": "A modern React component library built with Tailwind CSS v4+ and TypeScript. Features dark mode, design tokens, and comprehensive Storybook documentation.",
  "keywords": [
    "react",
    "components",
    "ui",
    "tailwind",
    "typescript",
    "design-system",
    "storybook"
  ],
  "author": "Your Name <victor_f_brito@outlook.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/victorfbrito/neo-ui-demo.git"
  },
  "homepage": "https://github.com/victorfbrito/neo-ui-demo#readme",
  "bugs": {
    "url": "https://github.com/victorfbrito/neo-ui-demo/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": "./dist/styles.css"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist",
    "QUICK_FIX_FOR_CONSUMER.md",
    "CONSUMER_SETUP.md"
  ],
  "scripts": {
    "dev": "vite",
    "build:tokens": "node scripts/build-tokens.mjs",
    "build": "npm run build:tokens && tsup && npm run build:css",
    "build:css": "node scripts/build-css.mjs",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "npm run build && npm run typecheck",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "tailwind-variants": "^0.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@storybook/addon-actions": "^8.1.0",
    "@storybook/addon-essentials": "^8.1.0",
    "@storybook/addon-interactions": "^8.1.0",
    "@storybook/react": "^8.1.0",
    "@storybook/react-vite": "^8.1.0",
    "@storybook/test": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.13",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.0.3",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.1.13",
    "tsup": "^8.0.1",
    "typescript": "^5.6.0",
    "vite": "^5.4.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
